                <category android:name="android.intent.category.PENWINDOW_LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name="org.dalol.orthodoxmezmurmedia.modules.help.HelpActivity" />
        <activity android:name="org.dalol.orthodoxmezmurmedia.modules.player.MezmursPlayer" />
